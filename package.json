{
  "name": "zhanwen-admin",
  "version": "1.0.0",
  "description": "占卜应用管理后台 - 统一的前后端管理系统",
  "main": "backend/dist/app.js",
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd zhanwen-admin-vue && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd zhanwen-admin-vue && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd zhanwen-admin-vue && npm run serve",
    "start": "npm run start:backend",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "migrate": "cd backend && npm run migrate",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "divination",
    "admin",
    "management",
    "ai",
    "react",
    "express",
    "typescript"
  ],
  "author": "Divination Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
